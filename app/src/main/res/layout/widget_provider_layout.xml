<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="@dimen/widget_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/transparent_white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/product_of_day"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_dark"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/widgetImgLauncher"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred_dp"
            android:gravity="center"
            android:contentDescription="@string/popular_product_image"
            android:scaleType="centerInside"
            android:src="@drawable/indian_food_platter"
            />


    </LinearLayout>

</FrameLayout>